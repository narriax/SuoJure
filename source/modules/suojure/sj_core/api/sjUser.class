	// personas ======================================
	
	public function load_personas() {
		$q = db_select('sj_user_persona', 'up')
			-> fields('up', array()) 
			-> condition('up.username', $this->username)
			-> orderBy('up.weight');
		$raw = $q->execute()->fetchAll();
		
		$this->personas = array();
		foreach ($raw as $r) {
			if (!array_key_exists($r->grp, $this->personas))
				$this->personas[$r->grp] = array();
			$this->personas[$r->grp][$r->name] = $r;
